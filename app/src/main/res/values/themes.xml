<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WeatherApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.WeatherApp" parent="Base.Theme.WeatherApp" />

    <style name="textViewCityNameSearchBar" parent="Widget.AppCompat.TextView">
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="searchBarStyle" parent="Widget.Material3.SearchBar">
        <item name="android:backgroundTint">@color/deepBlue</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="android:hint">@string/search_bar_hint</item>
    </style>

    <style name="cardViewMain" parent="Widget.Material3.CardView.Elevated">
        <item name="android:backgroundTint">@color/deepBlue</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="cardViewForecast" parent="Widget.Material3.CardView.Elevated">
        <item name="android:backgroundTint">@color/deepBlue</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>
</resources>